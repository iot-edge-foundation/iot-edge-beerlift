@inherits BottleHolderComponentBase

<h3>Bottle holders</h3>

<select @onchange="BottleHolderElementSelected" size="16" style="width:100%" disabled="@disabled">
    @foreach (var bottleholder in Bottleholders)
    {
    <option value="@bottleholder.indexer">@bottleholder.indexer - @bottleholder.name - @bottleholder.state</option>
    }
</select>

<p>
    <input @bind="BottleBrandAndMake" placeholder="Brand and make" disabled="@disabled" />

    <Tooltip Text="Add bottle">
        <button class="btn btn-primary" @onclick="AddBottle" disabled="@disabled"><Icon Name="IconName.Add" /></button>
    </Tooltip>

    @if (@selectedBottleHolder != null)
    {
    <Tooltip Text="Remove bottle">
        <button class="btn btn-primary" @onclick="RemoveBottle" disabled="@disabled"><Icon Name="IconName.Remove" /></button>
    </Tooltip>
    }
</p>

<Alert Color="Color.Info" Visible="@addingBeerBottle">
    <AlertMessage>Add a beer bottle</AlertMessage>
    <AlertDescription>
        @BottleActionText
    </AlertDescription>
</Alert>